{
    "name": "Twitch Chat Extension",
    "description": "A Twitch extension that enhances the chat experience with custom emotes, badges and backgrounds.",
    "version": "1.6",
    "manifest_version": 3,
    "icons": {
        "16": "/images/icon-16x16.png",
        "32": "/images/icon-32x32.png",
        "48": "/images/icon-48x48.png",
        "128": "/images/icon-128x128.png"
    },
    "background": {
        "scripts": ["./scripts/background.js"]
    },
    "action": {
        "default_popup": "./popup/popup.html"
    },
    "permissions": [
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "https://www.twitch.tv/aruten_",
        "https://www.twitch.tv/moderator/aruten_",
        "https://dashboard.twitch.tv/u/aruten_/stream-manager"
    ]
}